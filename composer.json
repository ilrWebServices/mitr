{
    "name": "ilr/emhrm-connector",
    "description": "Minimalist Drupal project connecting CollegeNET to Salesforce for EMHRM and eCornell.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [{
            "name": "Aaron Froelich",
            "email": "aaronf@cornell.edu",
            "role": "Developer"
        },
        {
            "name": "Jeff Amaral",
            "email": "jeff.amaral@cornell.edu",
            "role": "Developer"
        }
    ],
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [{
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ilrWebServices/drupal_collegenet2sf.git"
        },
        {
          "type": "vcs",
          "url": "https://github.com/ilrWebServices/webhook_logger.git"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/collegenet2sf": "^1",
        "drupal/core-composer-scaffold": "^9.2",
        "drupal/core-recommended": "^9.2",
        "drupal/key": "^1.14",
        "drupal/salesforce": "^4.0",
        "drupal/webhook_logger": "1.x-dev",
        "drush/drush": "^10.5",
        "firebase/php-jwt": "^5.0",
        "platformsh/config-reader": "^2.4",
        "vlucas/phpdotenv": "5.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true
        }
    },
    "autoload": {
        "files": ["load.environment.php"]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/profiles/custom/{$name}": ["type:drupal-custom-profile"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        },
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drupal/salesforce": {
                "Allow RestClient to handle non-JSON data": "https://git.drupalcode.org/project/salesforce/-/merge_requests/23.diff"
            }
        }
    }
}
